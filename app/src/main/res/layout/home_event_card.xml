<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect_shape"
    android:layout_marginTop="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <TextView
        android:id="@+id/current_name"
        android:text="Third Ball Elimination"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/current_description"
        android:text="One Act Stage Play Competition"
        android:textSize="14sp"
        android:layout_below="@+id/current_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>



    <RelativeLayout android:id="@+id/notificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_description"
        android:textColor="#888888"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/current_venue"
            android:text="Convocation Hall"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            />
        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/current_venue"
            android:text="|"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:text="22:00 hrs"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/slash"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"/>
    </RelativeLayout>
  
   
</RelativeLayout>